<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="student.Login">
    <ContentPage.Content>
        <AbsoluteLayout>

            <StackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         AbsoluteLayout.LayoutFlags="All"
                         AbsoluteLayout.LayoutBounds="0, 0, 1, 1">

                <Label Text="Usuario" HorizontalOptions="Center"/>
                <Entry x:Name="username" WidthRequest="200" HorizontalTextAlignment="Center"></Entry>
                <Label Text="Contraseña"  HorizontalOptions="Center"/>
                <Entry x:Name="password" WidthRequest="200" HorizontalTextAlignment="Center" IsPassword="True"></Entry>
                <Button Text="Login" Clicked="SendLogin"></Button>

            </StackLayout>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>